{
  "name": "root",
  "type": "module",
  "private": true,
  "scripts": {
    "format": "dprint fmt",
    "lint": "run-p lint:*",
    "lint:format": "dprint check",
    "lint:types": "pnpm -r type-check",
    "build": "pnpm -r build --filter=\"!*-app\"",
    "clean": "pnpm -r clean",
    "lint:js": "eslint .",
    "prepare": "husky install",
    "test": "vitest",
    "dev:vite-server": "pnpm dev:server --filter vite-app",
    "dev:vite-client": "pnpm dev:client --filter vite-app",
    "dev:serve-html": "pnpm serve-dev --filter @trpc-playground/html",
    "dev": "run-p dev:*"
  },
  "devDependencies": {
    "@changesets/cli": "2.19.0",
    "@types/node": "17.0.5",
    "@typescript-eslint/eslint-plugin": "5.8.1",
    "@typescript-eslint/parser": "5.8.1",
    "dprint": "0.19.2",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.4",
    "nano-staged": "0.5.0",
    "npm-run-all": "4.1.5",
    "preact": "10.6.4",
    "rimraf": "3.0.2",
    "tsup": "5.11.10",
    "typescript": "4.5.4",
    "vite": "2.7.10",
    "vitest": "0.0.125"
  },
  "sideEffects": false,
  "nano-staged": {
    "*.{js,ts,md,json,yaml}": "dprint fmt"
  }
}
