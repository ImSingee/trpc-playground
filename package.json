{
  "name": "root",
  "type": "module",
  "private": true,
  "scripts": {
    "format": "dprint fmt",
    "lint": "run-p lint:*",
    "lint:format": "dprint check",
    "lint:types": "turbo run type-check",
    "lint:js": "eslint .",
    "build": "turbo run build --scope=\"@trpc-playground/**\" --scope=\"trpc-playground\" --no-deps",
    "clean": "pnpm -r clean",
    "prepare": "husky install",
    "test": "vitest",
    "dev:vite-server": "pnpm dev:server --filter vite-app",
    "dev:vite-client": "pnpm dev:client --filter vite-app",
    "dev:serve-html": "pnpm serve-dev --filter @trpc-playground/html",
    "dev": "run-p dev:*"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.3",
    "@changesets/cli": "2.21.1",
    "@types/node": "17.0.23",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "dprint": "0.23.1",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "husky": "7.0.4",
    "nano-staged": "0.6.0",
    "npm-run-all": "4.1.5",
    "preact": "10.6.6",
    "rimraf": "3.0.2",
    "tsup": "5.12.1",
    "turbo": "1.1.10",
    "typescript": "4.6.3",
    "vite": "2.8.6",
    "vitest": "0.7.11"
  },
  "sideEffects": false,
  "nano-staged": {
    "*.{js,ts,md,json,yaml}": "dprint fmt"
  }
}
